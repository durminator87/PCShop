@model PCShop.Models.PCShopCartVM

@{
    ViewBag.Title = "PCShopCart";
}

<br />

<table id="cart" class="table table-hover">
    <thead>
        <tr>
            <th style="width:50%">Book</th>
            <th style="width:10%">Price</th>
            <th style="width:8%">Quantity</th>
            <th style="width:10%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td data-th="Book">
                    <div class="row">
                        <div class="col-sm-10">
                            <h4 class="nomargin">@item.Product.Name</h4>
                            <p>@item.Product.Details</p>
                        </div>
                    </div>
                </td>
                <td data-th="Price">@item.Product.Price</td>
                <td data-th="Subtotal" class="text-center">@item.Count</td>
                <td class="actions" data-th="">
                    <a class="btn btn-danger btn-sm" href="/BookstoreCart/RemoveFromCart?id=@item.Product.ProductID"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <td>
                <a href="javascript:history.go(-1)" class="btn btn-default"><i class="fa fa-angle-left"></i> Continue Shopping</a>
                <a href="/Buy/Buy" class="btn btn-primary">Buy</a>
            </td>
            <td colspan="2" class="hidden-xs"></td>
            <td class="hidden-xs text-center"><strong>Total @Model.CartSaldo $</strong></td>
        </tr>
    </tfoot>
</table>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">